<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.DietChart">
    <androidx.cardview.widget.CardView
        android:id="@+id/calenderPicker"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_centerInParent="true"
       android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:elevation="10dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            tools:ignore="ScrollViewCount">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dayBtnLayout">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mon"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/color"
                    android:textSize="24sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/nats"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tue"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tue"
                    android:textColor="@color/black"
                    android:background="@drawable/color"
                    android:textSize="24sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/nats"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/wed"
                    android:layout_width="65dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/wed"
                    android:textColor="@color/black"
                    android:background="@drawable/color"
                    android:textSize="24sp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nats"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/thur"
                    android:padding="10dp"
                                      android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/thu"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:background="@drawable/color"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nats"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fri"
                    android:padding="10dp"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fri"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:background="@drawable/color"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nats"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sat"
                    android:layout_width="65dp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:text="@string/sat"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/color"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nats"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sun"
                    android:padding="10dp"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="@string/sun"
                    android:textColor="@color/black"
                    android:background="@drawable/color"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nats"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/mealLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calenderPicker"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mealTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/eatback"
                android:fontFamily="@font/nats"
                android:text="@string/breakfast"
                android:textAllCaps="false"
                android:textColor="#76A5FF"
                android:textSize="21sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/eatback"
                android:fontFamily="@font/nats"
                android:text="@string/launch"
                android:textAllCaps="false"
                android:textColor="#76A5FF"
                android:textSize="21sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/snacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/eatback"
                android:fontFamily="@font/nats"
                android:text="@string/snack"
                android:textAllCaps="false"

                android:textColor="#76A5FF"
                android:textSize="21sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/eatback"
                android:fontFamily="@font/nats"
                android:text="@string/dinner"
                android:textAllCaps="false"
                android:textColor="#76A5FF"
                android:textSize="21sp"
                tools:ignore="TextContrastCheck" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/dietFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:elevation="16dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment"
                android:name="hello.tech.infits.Fragments.DietBreakfastFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_diet_breakfast" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>