<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.RegisterActivity">

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:fontFamily="@font/nats"
        android:text="@string/skip"
        android:textColor="#7282FB"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/IvInfits"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_below="@id/skip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/infit"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/userLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IvInfits"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/nats"
            android:text="@string/create"
            android:textColor="#7862FB"
            android:textSize="27sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="77dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/create"
            tools:ignore="ContentDescription" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/emailLayout"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_below="@id/name"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="#7B7B7B"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="TextContrastCheck" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/pass"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_below="@id/emailLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/pass" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#7B7B7B"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="TextContrastCheck" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/confirm"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_below="@id/pass"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/edit"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/pass" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/confirm_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#7B7B7B"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="TextContrastCheck" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_below="@+id/confirm"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginback"
        android:fontFamily="@font/nats"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/name"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_below="@id/userLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#7B7B7B"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="TextContrastCheck" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>